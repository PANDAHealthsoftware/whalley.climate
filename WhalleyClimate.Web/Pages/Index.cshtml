@page
@model WhalleyClimate.Web.Pages.IndexModel

<div class="container py-5">
    <div class="text-center mb-5">
        <h1 class="display-4 fw-bold">Whalley Climate</h1>
        <p class="lead">Specialists in Commercial Air Conditioning, Heating & Ventilation</p>
        <a href="/Contact" class="btn btn-primary btn-lg">Request a Quote</a>
    </div>

    <!-- Services -->
    <div class="row text-center">
        <div class="col-md-4 mb-4">
            <i class="bi bi-tools" style="font-size: 2rem;"></i>
            <h5 class="mt-2">Installation</h5>
            <p>Custom HVAC installations for commercial spaces.</p>
        </div>
        <div class="col-md-4 mb-4">
            <i class="bi bi-shield-check" style="font-size: 2rem;"></i>
            <h5 class="mt-2">Maintenance</h5>
            <p>Preventative and planned service contracts.</p>
        </div>
        <div class="col-md-4 mb-4">
            <i class="bi bi-lightning-charge" style="font-size: 2rem;"></i>
            <h5 class="mt-2">Emergency Repairs</h5>
            <p>24/7 response for critical climate system failures.</p>
        </div>
    </div>
</div>

<!-- Clients Section -->
<div class="bg-white py-5 border-top">
    <div class="container text-center">
        <h3 class="mb-4">Trusted by Leading Brands</h3>
        <div class="row justify-content-center">
            <div class="col-6 col-sm-4 col-md-3 mb-4 d-flex align-items-center justify-content-center client-logo-wrapper">
                <img src="~/images/clients/burnleyfc.png" class="img-fluid grayscale client-logo" alt="Burnley FC" />
            </div>
            <div class="col-6 col-sm-4 col-md-3 mb-4 d-flex align-items-center justify-content-center client-logo-wrapper">
                <img src="~/images/clients/brewdoglogo.png" class="img-fluid grayscale client-logo" alt="BrewDog" />
            </div>
            <div class="col-6 col-sm-4 col-md-3 mb-4 d-flex align-items-center justify-content-center client-logo-wrapper">
                <img src="~/images/clients/bae-systems-logo.svg" class="img-fluid client-logo" alt="BAE Systems" />
            </div>
        </div>
    </div>
</div>
